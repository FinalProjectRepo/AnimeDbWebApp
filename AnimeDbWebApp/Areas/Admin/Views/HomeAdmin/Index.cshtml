<h1>Mappings</h1>
<div class="container-fluid d-flex col-sm-10 justify-content-center" style="gap:10px">
	<div class="d-flex flex-column">
		<h1 class="mb-4">Simple Add</h1>
		<form asp-area="Admin" asp-controller="MappingAdmin" asp-action="Add" class="row mx-0">
			<select name="first" class="form-control">
				<option value="1">Anime</option>
				<option value="2">Manga</option>
			</select>
			<select name="second" class="form-control">
				<option value="1">Anime</option>
				<option value="2">Manga</option>
				<option value="3">Genre</option>
				<option value="4">Producer</option>
				<option value="5">Studio</option>
				<option value="6">Licensor</option>
				<option value="7">Author</option>
				<option value="8">Magazine</option>
			</select>
			<input type="number" name="firstId" style="max-width:100px" />
			<input type="number" name="secondId" style="max-width:100px" />
			<button type="submit" class="btn btn-secondary text-light" style="width:120px">Go</button>
		</form>
	</div>
	<div class="d-flex flex-column">
		<h1 class="mb-4">Simple Remove</h1>
		<form asp-area="Admin" asp-controller="MappingAdmin" asp-action="Remove" class="row mx-0">
			<select name="first" class="form-control">
				<option value="1">Anime</option>
				<option value="2">Manga</option>
			</select>
			<select name="second" class="form-control">
				<option value="1">Anime</option>
				<option value="2">Manga</option>
				<option value="3">Genre</option>
				<option value="4">Producer</option>
				<option value="5">Studio</option>
				<option value="6">Licensor</option>
				<option value="7">Author</option>
				<option value="8">Magazine</option>
			</select>
			<input type="number" name="firstId" style="max-width:100px" />
			<input type="number" name="secondId" style="max-width:100px" />
			<button type="submit" class="btn btn-secondary text-light" style="width:120px">Go</button>
		</form>
	</div>
	<div class="d-flex flex-column">
		<h1 class="mb-4">Relation Add</h1>
		<form asp-area="Admin" asp-controller="MappingAdmin" asp-action="AddOrEditRelation" class="row mx-0">
			<select name="first" class="form-control">
				<option value="1">Anime</option>
				<option value="2">Manga</option>
			</select>
			<input type="number" name="firstId" style="max-width:100px" />
			<input type="number" name="secondId" style="max-width:100px" />
			<input type="text" name="relation" style="max-width:100px" />
			<button type="submit" class="btn btn-secondary text-light" style="width:120px">Go</button>
		</form>
	</div>
	<div class="d-flex flex-column">
		<h1 class="mb-4">Relation Remove</h1>
		<form asp-area="Admin" asp-controller="MappingAdmin" asp-action="RemoveRelation" class="row mx-0">
			<select name="first" class="form-control">
				<option value="1">Anime</option>
				<option value="2">Manga</option>
			</select>
			<input type="number" name="firstId" style="max-width:100px" />
			<input type="number" name="secondId" style="max-width:100px" />
			<button type="submit" class="btn btn-secondary text-light" style="width:120px">Go</button>
		</form>
	</div>
</div>