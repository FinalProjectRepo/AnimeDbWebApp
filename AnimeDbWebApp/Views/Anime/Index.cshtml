@model AnimeWithCountViewModel

@{
	ViewData["Title"] = "Anime Page";
	int start = -2;
	if (Model.Page == 1) start = 0;
	else if (Model.Page == 2) start = -1;

	int end = 2;
	if (Model.Page == Model.TotalPages) end = 0;
	else if (Model.Page + 1 == Model.TotalPages) end = 1;
}

<div class="btn-toolbar container-fluid row justify-content-center my-4">
	<form class="form-inline col-sm-10 justify-content-center" asp-controller="Anime" asp-action="Index" method="get">
		<input name="page" type="hidden" value="@Model.Page">
		<input name="itemsPerPage" type="hidden" value="@Model.ItemsPerPage">
		<input name="search" class="py-1 ml-2 w-25" type="text" placeholder="Search">
		<button type="submit" class="btn btn-primary">Seach</button>
	</form>
</div>

<div class="btn-toolbar container-fluid row justify-content-center my-4">
	<div class="col-sm-10 d-flex justify-content-end align-baseline">
		<p class="mr-4" style="font-size:1.3em">Items per page: </p>
		<a class="btn btn-secondary mr-2" asp-controller="Anime" asp-action="Index" asp-route-itemsPerPage=10>10</a>
		<a class="btn btn-secondary mr-2" asp-controller="Anime" asp-action="Index" asp-route-itemsPerPage=20>20</a>
		<a class="btn btn-secondary mr-2" asp-controller="Anime" asp-action="Index" asp-route-itemsPerPage=50>50</a>
	</div>
</div>


<div class="container-fluid row justify-content-center">
	<table class="table table-striped table-bordered table-hover col-sm-10">
		<thead>
			<tr>
				<th>Image</th>
				<th>Title</th>
				<th>Episodes</th>
				<th>Type</th>
				<th>Status</th>
				<th>Duration</th>
				<th>Air Date</th>
				<th>Finished Airing</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var anime in Model.Animes)
			{
				<tr>
					<td>
						<div class="container" style="aspect-ratio: 4/1">
							<a asp-controller="Anime" asp-action="Details" asp-for="@anime.Id" metod="post">
								<img class="custom-scale h-100" src="@anime.PosterUrl" alt="Anime img">
							</a>
						</div>
					</td>
					<td>@anime.Title</td>
					<td>@anime.Episodes</td>
					<td>@anime.Type</td>
					<td>@anime.Status</td>
					<td>@anime.Duration</td>
					<td>@anime.StartDate</td>
					<td>@anime.EndDate</td>
				</tr>
			}
		</tbody>
	</table>
</div>

<div class="btn-toolbar mb-3 justify-content-center" role="toolbar" aria-label="Toolbar with button groups">
	<div class="btn-group mr-2" role="group" aria-label="First group">
		@for(int i = start; i <= end; i++)
		{
			<a asp-controller="Anime" asp-action="Index" asp-route-page=@(Model.Page + i) asp-route-itemsPerPage=@(Model.ItemsPerPage) asp-route-search="@Model.Search" class="btn btn-secondary">@(Model.Page + i)</a>
		}
		<form class="form-inline" asp-controller="Anime" asp-action="Index" method="get">
			<input name="page" class="py-1 ml-2 w-25" type="number" placeholder="@Model.Page">
			<input name="itemsPerPage" type="hidden" value=@Model.ItemsPerPage>
			<input name="search" type="hidden" value=@Model.Search>
			<input type="submit" class="btn btn-primary" value="Go">
		</form>
	</div>
</div>