@model HomeViewModel;

@{
    ViewData["Title"] = "Home Page";
    int i = 0;
}

<a asp-controller="Anime" asp-action="Index" class="text-dark h1-custom card-link">Check all animes</a>

<div id="carouselExampleControls" class="carousel slide mx-auto pt-3 pb-5 mb-5 border-bottom" data-ride="carousel">
    <div class="carousel-inner" style="aspect-ratio:4/1">
        <div class="carousel-item active">
            @while (i < 5)
            {
                <a asp-controller="Anime" asp-action="Details" asp-route-animeId="@Model.Animes[i].Id">
                    <img class="col-sm-2" src="@Model.Animes[i].PosterUrl" alt="First slide">
                </a>
                i++;
            }
        </div>
        @while (i + 6 < Model.Animes.Count)
        {
            <div class="carousel-item">
                @for (int j = 0; j < 5; j++, i++)
                {
                    <a asp-controller="Anime" asp-action="Details" asp-route-animeId="@Model.Animes[i].Id">
                        <img class="col-sm-2" src="@Model.Animes[i].PosterUrl" alt="First slide">
                    </a>
                }
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

@{i = 0;}

<a asp-controller="Manga" asp-action="Index" class="text-dark h1-custom card-link">Check all mangas</a>

